{
  "name": "max-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "connectors/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test --pass-with-no-tests"
  },
  "devDependencies": {
    "@max/connector-acme": "workspace:*",
    "@max/core": "workspace:*",
    "@max/daemon": "workspace:*",
    "@max/execution": "workspace:*",
    "@max/execution-local": "workspace:*",
    "@max/execution-sqlite": "workspace:*",
    "@max/storage-sqlite": "workspace:*",
    "@types/bun": "latest",
    "turbo": "^2.8.6",
    "typescript": "catalog:"
  },
  "catalog": {
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.9",
  "dependencies": {
    "@optique/core": "^0.9.2",
    "@optique/run": "^0.9.2"
  }
}
