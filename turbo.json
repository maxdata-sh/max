{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.base.json"],
  "tasks": {
    "typecheck": {
      "dependsOn": [],
      "inputs": ["src/**/*.ts", "!src/**/__test__/**", "tsconfig.json", "package.json"],
      "outputs": []
    },
    "test": {
      "dependsOn": [],
      "inputs": ["src/**/*.ts", "tsconfig.json", "package.json"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "!src/**/__test__/**", "tsconfig.json", "package.json"],
      "outputs": ["dist/**"]
    }
  }
}
